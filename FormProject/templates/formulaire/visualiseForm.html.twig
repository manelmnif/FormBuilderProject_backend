         if(arr[i]==arr[j]){
             status='exist';
             break;
         }

            }
        }
      console.log(status)
      if (status=='exist'){

    $('.wrapper').prepend('<div class="col-md-1"></div><div class="col-md-10 warningmessage"><div class="alert alert-icon alert-warning alert-dismissible fade in" role="alert"><button style="display:block;" type="button" class="close" data-dismiss="alert" aria-label="Close">'+
        '<span aria-hidden="true">×</span></button><i class="mdi mdi-alert"></i>Il existe deux champs ou plus qui ont le même label!</div></div><div class="col-md-1"></div>');
      }
        return status;
      }
      checkValue(labels);
      
